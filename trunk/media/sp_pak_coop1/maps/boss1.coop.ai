zombie1
{
	attributes
	{
		starting_health 90
		aggression 1.0
		fov 360
	}
	
	spawn
	{
		trigger player spawned_zombie
		alertentity zgrave1			// break the cover
		nosight 10000
		playanim revive both
		gotocast player
		sight
	}

	enemysight player
	{
		resetscript		// resume normal combat now
	}

	death
	{
		//print "killed zombie1"
		trigger player killed_zombie
		trigger counter1 killed_total
	}
}

